---
import Layout from '../layouts/Layout.astro';

// 1. Define your schedule data in one place
const schedule = [
  {
    day: "Lunes",
    classes: [
      { time: "09:00 - 10:00", name: "Adults BJJ", coach: "Iván Matilla" },
      { time: "18:00 - 19:00", name: "Adults BJJ", coach: "Ángel Cabezuelo" },
    ],
  },
  {
    day: "Martes",
    classes: [
      { time: "09:00 - 10:00", name: "Adults NoGi", coach: "Ángel Gómez" },
      { time: "17:15 - 18:15", name: "Kids GI", coach: "Ángel Gómez" },
    ],
  },
  {
    day: "Miércoles",
    classes: [
      { time: "09:00 - 10:00", name: "Adults BJJ", coach: "Iván Matilla" },
      { time: "18:00 - 19:00", name: "Adults BJJ", coach: "Ángel Cabezuelo" },
      
    ],
  },
  {
    day: "Jueves",
    classes: [
      { time: "09:00 - 10:00", name: "Adults NoGi", coach: "Ángel Gómez" },
      { time: "17:15 - 18:15", name: "Kids GI", coach: "Ángel Gómez" },
    ],
  },
  {
    day: "Viernes",
    classes: [
      { time: "09:00 - 10:00", name: "Adults BJJ", coach: "Iván Matilla" },
      { time: "17:00 - 18:00", name: "Adults BJJ", coach: "Ángel Cabezuelo" },
    ],
  },
];
---

<Layout>
  <section class="py-20 px-4 bg-gray-900 dark:bg-gray-50">
    <div class="container mx-auto p-8">
      <h2 class="text-4xl font-extrabold text-red-600 mb-6 text-center">Horario de Clases</h2>
      <p class="text-xl text-center text-gray-400 dark:text-gray-700 mb-10 max-w-2xl mx-auto">
        Aquí encontrarás nuestros horarios semanales. ¡Entrena a tu propio ritmo y lleva tu jiu-jitsu al siguiente nivel!
      
      </p>

      <div class="space-y-10">
        {schedule.map(({ day, classes }) => (
          <div>
            <h3 class="text-2xl font-bold text-red-500 mb-4">{day}</h3>
            <div class="grid md:grid-cols-2 gap-4">
              {classes.map(cls => (
                <div class="bg-gray-800 dark:bg-gray-200 rounded-xl p-4 shadow-lg">
                  <p class="text-lg font-semibold text-white dark:text-gray-800">{cls.time}</p>
                  <p class="text-gray-300 dark:text-gray-700">{cls.name} - {cls.coach}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>